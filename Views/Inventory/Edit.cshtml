@model InventoryManagement.ViewModels.InventoryAddEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

@* <h4>InventoryAddEditViewModel</h4> *@
<hr />
<div class="row mb-3">
    <div class="col-md-10">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group row mt-3 col-md-12">
                <label asp-for="InventoryId" class="col-md-2 col-form-label">Inventory Id</label>
                <div class="col-sm-6">
                    <input asp-for="InventoryId" type="text" class="form-control" id="InventoryId">
                </div>
            </div>
            <div class="form-group row mt-3 col-md-12">
                <label asp-for="Code" class="col-md-2 col-form-label">Code</label>
                <div class="col-sm-6">
                    <input asp-for="Code" type="text" class="form-control" id="code">
                </div>
            </div>
            <div class="form-group row mt-3 col-md-12">
                <label asp-for="Name" class="col-md-2 col-form-label">Name</label>
                <div class="col-sm-6">
                    <input asp-for="Name" type="text" class="form-control" id="name">
                </div>
            </div>
            <table class="table" id="tblInventoryMedia">
                <thead>
                    <tr>
                        <th>
                            Image
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.InventoryMedias)
                    {
                        <tr>
                            <td>
                                <img width=200 src=@item.MediaFile>
                            </td>
                            <td>
                                <input type='button' value='remove' class='btn btn-link btnRemoveMedia'/>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <table class="table" id="tblInventoryDetail">
                <thead>
                    <tr>
                        <th>
                            Detail
                        </th>
                        <th>
                            Value
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.InventoryDetails)
                    {
                        <tr>
                            <td>
                                @item.DetailName
                            </td>
                            <td>
                                @item.DetailValue
                            </td>
                            <td>
                                <input type='button' value='edit' class='btn btn-link btnEditDetail' />
                                <input type='button' value='remove' class='btn btn-link btnRemoveDetail' />
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" id="btnSave" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
